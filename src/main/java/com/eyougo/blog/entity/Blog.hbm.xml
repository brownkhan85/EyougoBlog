<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.eyougo.blog.hbxml">
  <class name="com.eyougo.blog.entity.Blog" table="BLOG_BLOGS" dynamic-update="true">
  	<id name="id">
		<generator class="identity" />
  	</id>
  	<property name="title" not-null="true"/>
  	<property name="content" not-null="true" />
  	<property name="summary" />
  	<property name="date">
  		<column name="date" sql-type="datetime"></column>
  	</property>
  	<property name="bit" type="int"></property>
  	<property name="commentsNum" type="int"></property>
  	<property name="top" type="int"/>
  	<property name="isDraft" type="java.lang.Boolean"/>
  	<property name="copyright" type="java.lang.Boolean"/>
  	<property name="emotion" type="int"></property>
  	<property name="cmtUser" type="int"></property>
  	<many-to-one name="category" column="category_id" fetch="join"></many-to-one>
  	<set name="comments"  inverse="true" cascade="all" order-by="commentDate asc">
  		<key column="BLOG_ID" />
  		<one-to-many  class="com.eyougo.blog.entity.Comment"/>
  	</set>
  </class>
</hibernate-mapping>
